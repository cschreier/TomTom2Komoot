<?xml version="1.0" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets>
        <target name="file" xsi:type="File" layout="${longdate} | ${logger} | ${message}" fileName="${basedir}/logs/logfile.log" 
        archiveFileName="${basedir}/logs/logfile_{#####}.log" 
        maxArchiveDays="10" 
        archiveEvery="Day" 
        archiveNumbering="Rolling" />
    </targets>

    <rules>
        <logger name="*" minlevel="Debug" writeTo="file" />
    </rules>
</nlog>